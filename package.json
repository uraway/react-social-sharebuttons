{
  "name": "react-social-sharebuttons",
  "version": "3.4.0",
  "description": "Simple React components for Social Share Buttons.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c && tsc --emitDeclarationOnly",
    "build-watch": "rollup -c -w",
    "lint": "run-p lint:*",
    "lint:typecheck": "tsc",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier src --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "jest",
    "test:ci": "jest --ci --runInBand",
    "prepublish": "yarn build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy": "storybook-to-ghpages"
  },
  "keywords": [
    "react",
    "react-component",
    "react-line-button",
    "line-button",
    "line",
    "hatena",
    "hatenabookmark",
    "hatena-button",
    "hatenabookmark-button",
    "feedly",
    "feedly-button",
    "linkedin",
    "linkedin-button",
    "LinkedIn",
    "facebook",
    "google",
    "google-plus",
    "twitter",
    "youtube",
    "pocket",
    "tumblr",
    "hashtag",
    "social",
    "social-share"
  ],
  "author": "Masato Urai (@uraway_)",
  "license": "MIT",
  "homepage": "https://github.com/uraway/react-social-sharebuttons",
  "repository": {
    "type": "git",
    "url": "git://github.com/uraway/react-social-sharebuttons.git"
  },
  "bugs": {
    "url": "https://github.com/uraway/react-social-sharebuttons/issues"
  },
  "peerDependencies": {
    "react": "16 || 17",
    "react-dom": "16 || 17"
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-react": "7.14.5",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.2",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-typescript": "8.3.0",
    "@storybook/addon-knobs": "6.3.1",
    "@storybook/react": "6.3.4",
    "@storybook/storybook-deployer": "2.8.10",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.14",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "jest": "27.0.6",
    "lint-staged": "11.2.3",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.5",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rollup": "2.58.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "27.0.7",
    "tslib": "2.3.0",
    "typescript": "4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "jsx"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier src --write",
      "git add"
    ]
  }
}
