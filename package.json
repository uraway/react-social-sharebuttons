{
  "name": "react-social-sharebuttons",
  "version": "3.4.2",
  "description": "Simple React components for Social Share Buttons.",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    "import": "./dist/index.es.js",
    "require": "./dist/index.umd.js"
  },
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "watch": "vite build -w",
    "lint": "run-p lint:*",
    "lint:typecheck": "tsc",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier src --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "jest",
    "test:ci": "jest --ci --runInBand",
    "prepublish": "yarn build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy": "storybook-to-ghpages"
  },
  "keywords": [
    "react",
    "react-component",
    "react-line-button",
    "line-button",
    "line",
    "hatena",
    "hatenabookmark",
    "hatena-button",
    "hatenabookmark-button",
    "feedly",
    "feedly-button",
    "linkedin",
    "linkedin-button",
    "LinkedIn",
    "facebook",
    "google",
    "google-plus",
    "twitter",
    "youtube",
    "pocket",
    "tumblr",
    "hashtag",
    "social",
    "social-share"
  ],
  "author": "Masato Urai (@uraway_)",
  "license": "MIT",
  "homepage": "https://github.com/uraway/react-social-sharebuttons",
  "repository": {
    "type": "git",
    "url": "git://github.com/uraway/react-social-sharebuttons.git"
  },
  "bugs": {
    "url": "https://github.com/uraway/react-social-sharebuttons/issues"
  },
  "peerDependencies": {
    "react": "16 || 17",
    "react-dom": "16 || 17"
  },
  "devDependencies": {
    "@babel/cli": "7.17.3",
    "@babel/core": "7.17.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@storybook/addon-knobs": "6.4.0",
    "@storybook/react": "6.4.19",
    "@storybook/storybook-deployer": "2.8.10",
    "@types/jest": "27.4.0",
    "@types/react": "17.0.39",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "@vitejs/plugin-react": "1.2.0",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.5",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5",
    "vite": "2.8.4",
    "react-dom": "17.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "jsx"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier src --write",
      "git add"
    ]
  }
}
