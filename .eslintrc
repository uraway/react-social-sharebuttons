{
  "parser": "babel-eslint",
  "settings": {
    "import/core-modules": ["react"]
  },
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["flowtype"],
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "comma-dangle": 0,
    "new-cap": 0,
    "no-nested-ternary": 0,
    "no-shadow": 0,
    "react/jsx-no-bind": [
      1,
      {
        "ignoreRefs": false,
        "allowArrowFunctions": true,
        "allowBind": true
      }
    ],
    "max-len": 0,
    "no-console": 0,
    "no-return-assign": 0,
    "react/prefer-stateless-function": 0,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["example/*", "stories/*", "**/*.test.js"] }],
		"no-param-reassign": [2, { "props": false }],
		"react/jsx-filename-extension": 0
  }
}
